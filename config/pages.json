{
    "pages": [
        {
            "name": "桌面",
            "rules": [
                "{CTools.isHome()}"
            ],
            "transitions": [
                {
                    "target": "快手极速版",
                    "action": "{DoCmd.run($toPage )}"
                },
                {
                    "target": "个人页",
                    "action": "@switchToProfile"
                }
            ]
        },
        {
            "name": "快手极速版",
            "rules": [
                "任务中心",
                "每日任务.*",
                "去完成[200,500,300,600]"
            ],
            "transitions": [
                {
                    "target": "首页",
                    "action": "返回"
                },
                {
                    "target": "奖励页",
                    "action": "立即领取$(datetime.now().day)"
                }
            ]
        },
        {
            "name": "个人页",
            "rules": [
                "我的账户",
                "欢迎$(CTools.getCurrentApp()['appName'])",
                "{CTools.isHome()}"  // 需要返回True的代码
            ],
            "transitions": [
                {
                    "target": "首页",
                    "action": "返回$(datetime.now().hour < 12 ? '上午' : '下午')"
                }
            ]
        },
        {
            "name": "奖励页",
            "rules": [
                "奖励领取",
                "剩余：\\d+金币"
            ],
            "transitions": [
                {
                    "target": "首页",
                    "action": "@goHome"
                }
            ]
        }
    ]
} 